<% if @attendee.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@attendee.errors.count, "error") %>.
    </div>
    <ul class="list-unstyled">
    <% @attendee.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>