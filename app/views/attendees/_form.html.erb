<div class="row">
  <div class="col-md-6 col-sm-9 col-xs-12">
    <%= form_for(@attendee) do |f| %>
      <%= render 'shared/error_messages' %>

      <div class="field form-group">
        <%= f.label :name %><br/>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :attendance, EVENT_DATE %><br/>
        <%= f.select :attendance, ["○", "△", "×"], {}, class:"form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :comment %><br/>
        <%= f.text_field :comment, class:"form-control" %>
      </div>
      <div class="actions">
        <%= f.submit class:"btn btn-default", type:"submit" %>
      </div>
    <% end %>
  </div>
</div>